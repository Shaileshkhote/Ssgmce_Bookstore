<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="169dp"
                android:layout_height="156dp"
                android:layout_marginBottom="624dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/upload" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/book_title"
                android:layout_width="337dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:background="#FFF7F7"
                android:hint="    Book Title*"
                android:inputType="text"
                android:singleLine="false"
                android:textColorHint="#676666"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/author"
                android:layout_width="337dp"
                android:layout_height="43dp"
                android:layout_marginTop="76dp"
                android:background="#FFF7F7"
                android:hint="    Author*"
                android:inputType="text"
                android:singleLine="false"
                android:textColorHint="#676666"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/book_edition"
                android:layout_width="337dp"
                android:layout_height="43dp"
                android:layout_marginTop="128dp"
                android:background="#FFF7F7"
                android:hint="    Book Edition*"
                android:inputType="text"
                android:singleLine="false"
                android:textColorHint="#676666"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/original_price"
                android:layout_width="337dp"
                android:layout_height="40dp"
                android:layout_marginTop="400dp"
                android:background="#FFF7F7"
                android:hint="    Original Price*"
                android:inputType="text"
                android:singleLine="false"
                android:textColorHint="#676666"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number"
                android:layout_width="337dp"
                android:layout_height="37dp"
                android:layout_marginTop="456dp"
                android:background="#FFF7F7"
                android:hint="    Phone Number*"
                android:inputType="text"
                android:singleLine="false"
                android:textColorHint="#676666"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:layout_constraintVertical_bias="0.358"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/book_description"
                android:layout_width="337dp"
                android:layout_height="81dp"
                android:layout_marginTop="304dp"
                android:background="#FFF7F7"
                android:hint="    Description*"
                android:inputType="text"
                android:singleLine="false"
                android:textColorHint="#676666"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/condition"
                android:layout_width="337dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:background="#FFF7F7"
                android:hint="    Book Condition*"
                android:textColorHighlight="#FFF7F7"
                android:textColorHint="#676666"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_edition" />

            <TextView
                android:id="@+id/estimate"
                android:layout_width="337dp"
                android:layout_height="39dp"
                android:layout_marginTop="284dp"
                android:background="#FFF7F7"
                android:hint="    Estimated Price"
                android:textColorHighlight="#FFF7F7"
                android:textColorHint="#676666"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_edition" />

            <RadioGroup
                android:id="@+id/radio_grp"
                android:layout_width="312dp"
                android:layout_height="73dp"
                app:layout_constraintBottom_toTopOf="@+id/book_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/condition"
                tools:ignore="UnknownId">

                <RadioButton
                    android:id="@+id/excellent_btn"
                    style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="Excellent" />

                <RadioButton
                    android:id="@+id/good_btn"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="Good" />

                <RadioButton
                    android:id="@+id/avg_btn"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="Average" />
            </RadioGroup>

            <Button
                android:id="@+id/click_here"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here"
                app:layout_constraintBottom_toTopOf="@+id/phone_number"
                app:layout_constraintEnd_toEndOf="@+id/estimate"
                app:layout_constraintHorizontal_bias="0.647"
                app:layout_constraintStart_toStartOf="@+id/estimate"
                app:layout_constraintTop_toBottomOf="@+id/original_price"
                app:layout_constraintVertical_bias="0.4"></Button>

            <Button
                android:id="@+id/save"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="386dp"
                android:layout_height="57dp"
                android:text="Save"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_number"></Button>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>