<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView

        android:layout_width="378dp"
        android:layout_height="153dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/book_name1"
            android:layout_width="match_parent"
            android:layout_height="151dp">

            <Button
                android:id="@+id/invoice_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="121dp"
                android:layout_height="73dp"
                android:text="Download Invoice"
                android:textColor="#2962FF"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/date_details"
                app:layout_constraintTop_toBottomOf="@+id/book_img"
                app:layout_constraintVertical_bias="0.0"></Button>

            <TextView
                android:id="@+id/Book_name"
                android:layout_width="211dp"
                android:layout_height="35dp"
                android:layout_marginBottom="56dp"
                android:text="Aditya Publication Dbms"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/date_details"
                app:layout_constraintEnd_toEndOf="@+id/date_details"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/date_details"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                tools:ignore="UnknownId" />

            <TextView
                android:id="@+id/date_details"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:text="Successfuly Paid on Mon,15 June,2020"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order_Id-88978"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/date_details"
                app:layout_constraintEnd_toStartOf="@+id/book_img"
                app:layout_constraintHorizontal_bias="0.459"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Book_name"
                app:layout_constraintVertical_bias="0.216" />

            <ImageView
                android:id="@+id/book_img"
                android:layout_width="138dp"
                android:layout_height="82dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/book_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/bookstore"
                tools:ignore="UnknownId" />

            <View
                android:id="@+id/divider"
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/date_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_id"
                app:layout_constraintVertical_bias="0.607" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>